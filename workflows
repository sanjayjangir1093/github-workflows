name: CI/CD Pipeline

on:
  pull_request:
    branches:
      - main
  push:
    branches:
      - main

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 18

      - name: Install dependencies
        run: npm install

      - name: Run tests
        run: npm test

  build-and-deploy:
    runs-on: ubuntu-latest
    needs: test
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Log in to DockerHub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build and push Docker image
        run: |
          docker build -t my-dockerhub-username/my-node-app:${{ github.sha }} .
          docker tag my-dockerhub-username/my-node-app:${{ github.sha }} my-dockerhub-username/my-node-app:latest
          docker push my-dockerhub-username/my-node-app:${{ github.sha }}
          docker push my-dockerhub-username/my-node-app:latest

      - name: Configure kubectl
        uses: azure/setup-kubectl@v3
        with:
          version: 'latest'

      - name: Set up kubeconfig
        run: |
          echo "${{ secrets.KUBECONFIG_CONTENT }}" > kubeconfig.yaml
          export KUBECONFIG=kubeconfig.yaml

      - name: Deploy to Kubernetes
        run: kubectl apply -f k8s-deployment.yml

      - name: Notify success
        if: success()
        run: echo "Deployment succeeded!"

      - name: Notify failure
        if: failure()
        run: echo "Deployment failed!"
